<!DOCTYPE html>
<html lang="en">
    <%- include('header') -%>

    <body class="bg-body">
    <%- include('navbar') -%>

    <div class="container">
        <div class="row">
            <div class="col-10 offset-1 col-md-6 offset-md-3">
                
              <% if (employees.length) { %>
            <h2>Employee Listing</h2><br />
            <table class="table table‐hover">
                <thead class="thead‐dark">
                    <tr>
                        <th>Employee Name</th>
                        <th>Info</th>
                    </tr>
                </thead>
                <tbody>
                    <% employees.forEach( (entry) => { %>
                    <tr>
                        <td><%= entry.employeeName %></td>
                        <td><a href='/views/<%= entry.employeeName %>'>VIEW</a></td>
                    </tr>
                    <% }) %>
                </tbody>                
            </table>
        <% } else { %>
            <a href="/new">+Add Employee</a>
        <% } %>
    
            </div>
        </div>
    </div>


    <%- include('footer') -%>
    <%- include('scripts') -%>
    
    </body>
</html>